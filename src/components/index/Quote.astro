---
import { Image } from 'astro:assets';
import quotes from '@assets/icons/quotes.svg';

interface Props {
	title: string;
	author: string;
};

const { title, author } = Astro.props;
---

<div class="p-6 border border-beaver rounded-xl shadow-sm">
	<img src={quotes.src} alt="Quotes icon" class="w-8 mb-6" />
	<p class="text-dark-gray text-l font-bold italic">{title} <span class="ml-1.5 font-normal not-italic">-{author}</span></p>
</div>
