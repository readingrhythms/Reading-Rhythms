const partners = [
  { name: 'Penguin Random House', logo: penguinRandomHouse.src, type: 'publisher', size: 'large', url: 'https://www.penguinrandomhouse.com' },
  { name: 'HarperCollins', logo: harperCollins.src, type: 'publisher', size: 'medium', url: 'https://www.harpercollins.com' },
  { name: 'Simon & Schuster', logo: simonAndSchuster.src, type: 'publisher', size: 'small', url: 'https://www.simonandschuster.com' },
