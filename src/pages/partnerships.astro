---
import BaseLayout from '@layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import arrowright from '@assets/icons/arrow-right.svg';
import logo from '@assets/images/logo.svg';
import pressNyt from '@assets/images/press-nyt.svg';
import pressNyp from '@assets/images/press-nyp.svg';
import pressTodayShow from '@assets/images/press-today_show.svg';
import pressFox5 from '@assets/images/press-fox5.svg';
import rollingStone from '@assets/images/rolling-stone.svg';
import gma from '@assets/images/GMA.svg';
import guardian from '@assets/images/guardian.svg';
import thrillist from '@assets/images/thrillest.png';
import washpost from '@assets/images/washpost.png';
import cbs from '@assets/images/cbs.jpg';
import forbes from '@assets/images/forbes.jpg';
import london from '@assets/images/london.svg';
import nbc from '@assets/images/nbc.jpg';
import techcrunch from '@assets/images/techcrunch.png';
import cbsNew from '@assets/images/cbs.png';
import forbesNew from '@assets/images/forbes.png';
import londonNew from '@assets/images/london copy.svg';
