import techcrunchNew from '@assets/images/techcrunch copy.png';

// Import partner images
import penguinRandomHouse from '@assets/images/partners/PRH.jpeg'
import harperCollins from '@assets/images/partners/HarperCollins Logo.png'
import simonAndSchuster from '@assets/images/partners/simon schuster.webp'
import hachetteBooks from '@assets/images/partners/Hachette Books Logo.png'
import macmillan from '@assets/images/partners/macimillan.png'
import hudsonYards from '@assets/images/partners/Hudson yards.svg'
import nypl from '@assets/images/partners/nypl.png'
