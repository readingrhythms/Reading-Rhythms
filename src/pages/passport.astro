      }
    }

    function closePassportModal() {
      if (passportModal && passportModalContent) {
        passportModalContent.classList.remove('scale-100', 'opacity-100');
        passportModalContent.classList.add('scale-95', 'opacity-0');
        setTimeout(() => {
          passportModal.classList.add('hidden');
          document.body.style.overflow = '';
        }, 300);
      }
    }

    passportCtaButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        openPassportModal();
      });
    });

    passportModalClose?.addEventListener('click', closePassportModal);
    passportModalBackdrop?.addEventListener('click', closePassportModal);

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && passportModal && !passportModal.classList.contains('hidden')) {
        closePassportModal();
      }
    });

    const testimonialsSection = document.getElementById('testimonials-section');
    const testimonialsContainer = document.getElementById('testimonials-container');
    const testimonialsTrack = document.getElementById('testimonials-track');

    if (testimonialsSection && testimonialsContainer && testimonialsTrack) {
      let isUserScrolling = false;
      let userScrollTimeout: ReturnType<typeof setTimeout>;

      testimonialsContainer.addEventListener('scroll', () => {
        isUserScrolling = true;
        clearTimeout(userScrollTimeout);
        userScrollTimeout = setTimeout(() => {
          isUserScrolling = false;
        }, 150);
      }, { passive: true });

      function updateTestimonialsScroll() {
        if (isUserScrolling) return;

        const rect = testimonialsSection.getBoundingClientRect();
        const viewportHeight = window.innerHeight;
        const sectionTop = rect.top;
        const sectionHeight = rect.height;

        const startOffset = viewportHeight * 0.8;
        const endOffset = -sectionHeight * 0.5;

        if (sectionTop < startOffset && sectionTop > endOffset) {
          const progress = (startOffset - sectionTop) / (startOffset - endOffset);
          const clampedProgress = Math.max(0, Math.min(1, progress));

          const trackWidth = testimonialsTrack.scrollWidth;
          const containerWidth = testimonialsContainer.clientWidth;
          const maxScroll = trackWidth - containerWidth;

          const scrollAmount = clampedProgress * maxScroll * 0.6;
          testimonialsContainer.scrollLeft = scrollAmount;
        }
      }

      window.addEventListener('scroll', updateTestimonialsScroll, { passive: true });
      updateTestimonialsScroll();
    }

  });
