        if (!isDragging) return;
        isDragging = false;
        track.style.transition = 'transform 0.3s ease-out';

        const endX = e.changedTouches[0].clientX;
        const diff = endX - startX;
        const threshold = 50;

        if (diff > threshold) {
          prevSlide();
        } else if (diff < -threshold) {
          nextSlide();
        } else {
          goToSlide(currentSlideIndex);
        }

        startAutoPlay();
      });

