        track.style.transition = 'transform 0.3s ease-out';
        carousel.style.cursor = 'grab';

        const diff = e.clientX - startX;
        const threshold = 50;

        if (diff > threshold) {
          prevSlide();
        } else if (diff < -threshold) {
          nextSlide();
        } else {
          goToSlide(currentSlideIndex);
        }

        startAutoPlay();
      });

