---
import BaseLayout from '@layouts/BaseLayout.astro';

const serifFont = "https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,300;0,9..144,400;0,9..144,500;0,9..144,600;0,9..144,700;0,9..144,800;1,9..144,400;1,9..144,500;1,9..144,600&display=swap";

const faqs = [
  {
    question: "Do I have to live in New York City to join?",
    answer: "Nope! Our Global Connection Passport is fully virtual - if you have Wi-Fi and a book, you're in. The NYC tiers are best if you're in or near NYC and want to actually attend in-person events."
  },
  {
    question: "How long does the Passport last?",
    answer: "The Winter season runs from January 31st to March 31st, with the Spring season starting thereafter. Your membership is billed monthly and continues seamlessly between seasons. Cancel anytime before your next billing date."
  },
  {
    question: "How often will I be charged for my Passport?",
    answer: "All tiers are billed monthly. Global Connection is $9/month after your free trial, NYC Reader is $19/month, and NYC All-Access is $39/month. You can cancel anytime before your next billing date."
  },
  {
    question: "What if I want to skip a season?",
    answer: "No problem! Just cancel your subscription before the renewal date. You can rejoin anytime for the next season without any penalty. We'll send you a reminder email before your renewal so you don't forget."
  },
  {
    question: "What exactly is a virtual reading party?",
    answer: "A live Zoom session following our in-person format: guided breathwork, 30 min reading, 1:1 conversations, more reading, group discussions, and a closing moment. Your first month is free with the Global Connection passport!"
  },
  {
    question: "I'm shy / introverted. Can I join?",
    answer: "Absolutely! Most of our community identifies as bookish introverts. Hosts use gentle prompts, you can keep your camera off, and our small group discussions feel more like a cozy coffee hang than a networking event."
  },
  {
    question: "What if I can't make every event?",
    answer: "No problem! Life happens. The Passport is here to make connection easier, not add pressure. Come when you can."
  },
  {
    question: "Can I bring a friend to events?",
    answer: "Yes! NYC Reader passport holders can bring guests at regular ticket prices, while NYC All-Access members get 1x friend ticket per month."
  }
];

const tiers = [
  {
    name: "Global Connection",
    badge: "VIRTUAL",
    price: "$9",
    period: "/mo",
    description: "For readers anywhere in the world",
    color: "sage",
    features: [
      "Personalized book recs every month",
      "Unlimited virtual reading parties",
      "Global community chat",
      "Entry into seasonal perks giveaway"
    ],
    cta: "Start Free Trial",
    popular: false,
    trial: "1 month free, then $9/mo - cancel anytime"
  },
  {
    name: "NYC Reader",
    badge: "NEW YORK",
    price: "$19",
    period: "/mo",
    description: "Unlimited NYC events all winter long",
    color: "jean",
    features: [
      "Everything in Global Connection",
      "Unlimited NYC Reading Parties",
      "Early merch access",
      "Entry into seasonal perks giveaway"
    ],
    cta: "Get My Passport",
    popular: true
  },
  {
    name: "NYC All-Access",
    badge: "VIP",
    price: "$39",
    period: "/mo",
    description: "The complete VIP experience",
    color: "rust",
    features: [
      "Everything in NYC Reader",
      "Guest list for sold-out events",
      "1x friend ticket per month",
      "Exclusive swag giveaway",
      "Entry into seasonal perks giveaway"
    ],
    cta: "Get My Passport",
    popular: false
  }
];
---

<BaseLayout title='Reading Rhythms | Winter Passport' description='The Winter Passport: Join a seasonal reading community and make real bookish friendships.' showNavbar={true} fullWidth={true} fullHeight={true}>

  <style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,300;0,9..144,400;0,9..144,500;0,9..144,600;0,9..144,700;0,9..144,800;1,9..144,400;1,9..144,500;1,9..144,600&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap');

    html, body {
      margin: 0 !important;
      padding: 0 !important;
      max-width: none !important;
      width: 100% !important;
      overflow-x: hidden;
    }

    body > main,
    body > .container,
    body > .wrapper,
    body > div:first-of-type,
    main,
    .main-content,
    #main-content,
    .page-wrapper,
    .content-wrapper {
      max-width: none !important;
      width: 100% !important;
      margin: 0 !important;
      padding: 0 !important;
      border: none !important;
      box-shadow: none !important;
    }

    .passport-page {
      width: 100vw !important;
      max-width: 100vw !important;
      margin-left: calc(-50vw + 50%) !important;
      margin-right: calc(-50vw + 50%) !important;
      overflow-x: hidden;
    }

    .passport-page section {
      width: 100% !important;
      max-width: none !important;
    }

    .passport-page {
      font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .passport-page .font-display {
      font-family: 'Fraunces', Georgia, 'Times New Roman', serif !important;
      font-weight: 600;
      font-optical-sizing: auto;
    }

    .scrollbar-hide {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
    .scrollbar-hide::-webkit-scrollbar {
      display: none;
    }

    @keyframes spin-slow {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    .animate-spin-slow {
      animation: spin-slow 20s linear infinite;
    }

    @keyframes float-slow {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-8px); }
    }

    @keyframes float-medium {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-12px); }
    }

    .animate-float-slow { animation: float-slow 6s ease-in-out infinite; }
    .animate-float-medium { animation: float-medium 5s ease-in-out infinite; }

    @keyframes pulse-soft {
      0%, 100% { opacity: 0.6; }
      50% { opacity: 0.9; }
    }

    .animate-pulse-soft {
      animation: pulse-soft 4s ease-in-out infinite;
    }

    @keyframes map-dot-pulse {
      0%, 100% {
        transform: scale(1);
        opacity: 0.8;
      }
      50% {
        transform: scale(1.5);
        opacity: 0.4;
      }
    }

    .map-dot {
      animation: map-dot-pulse 2s ease-in-out infinite;
    }

    .scroll-fade-up {
      opacity: 0;
      transform: translateY(60px);
      transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1), transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .scroll-fade-up.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .scroll-slide-left {
      opacity: 0;
      transform: translateX(-80px);
      transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1), transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .scroll-slide-left.visible {
      opacity: 1;
      transform: translateX(0);
    }

    .scroll-slide-right {
      opacity: 0;
      transform: translateX(80px);
      transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1), transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .scroll-slide-right.visible {
      opacity: 1;
      transform: translateX(0);
    }

    .scroll-scale-in {
      opacity: 0;
      transform: scale(0.9);
      transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1), transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .scroll-scale-in.visible {
      opacity: 1;
      transform: scale(1);
    }

    .stagger-children > *:nth-child(1) { transition-delay: 0s; }
    .stagger-children > *:nth-child(2) { transition-delay: 0.1s; }
    .stagger-children > *:nth-child(3) { transition-delay: 0.2s; }
    .stagger-children > *:nth-child(4) { transition-delay: 0.3s; }
    .stagger-children > *:nth-child(5) { transition-delay: 0.4s; }
    .stagger-children > *:nth-child(6) { transition-delay: 0.5s; }

    .parallax-float {
      transition: transform 0.1s ease-out;
    }

    @keyframes gentle-float {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      25% { transform: translateY(-10px) rotate(1deg); }
      50% { transform: translateY(-5px) rotate(0deg); }
      75% { transform: translateY(-15px) rotate(-1deg); }
    }

    .animate-gentle-float {
      animation: gentle-float 8s ease-in-out infinite;
    }

    @keyframes float-rotate {
      0%, 100% { transform: translateY(0) rotate(-6deg); }
      50% { transform: translateY(-20px) rotate(-3deg); }
    }

    .animate-float-rotate {
      animation: float-rotate 6s ease-in-out infinite;
    }

    .unified-cream-section {
      background: #F8F2E6;
    }

    .scrollbar-hide {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
    .scrollbar-hide::-webkit-scrollbar {
      display: none;
    }
  </style>

  <div class="passport-page">

  <!-- Hero Section - Bold Dark -->
  <section class="relative min-h-[auto] md:min-h-screen overflow-hidden flex items-center pt-[64px] lg:pt-[80px]" style="background: #111111;">
    <div class="absolute inset-0 overflow-hidden pointer-events-none hidden md:block">
      <div class="absolute top-20 left-[10%] w-2 h-2 bg-parchment/20 rounded-full"></div>
      <div class="absolute top-40 right-[20%] w-1.5 h-1.5 bg-khaki/30 rounded-full"></div>
      <div class="absolute bottom-32 left-[25%] w-2 h-2 bg-parchment/15 rounded-full"></div>
      <div class="absolute bottom-20 right-[15%] w-1 h-1 bg-khaki/25 rounded-full"></div>
    </div>

    <div class="relative w-full max-w-7xl mx-auto px-4 md:px-6 lg:px-8 py-4 md:py-12 lg:py-20">
