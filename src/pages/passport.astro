<script>
  document.addEventListener('DOMContentLoaded', () => {
    const targetDate = new Date('2026-02-04T23:59:59-05:00').getTime();

    function updateCountdown() {
      const now = new Date().getTime();
      const difference = targetDate - now;

      if (difference > 0) {
        const days = Math.floor(difference / (1000 * 60 * 60 * 24));
        const hours = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((difference % (1000 * 60)) / 1000);

        const daysEl = document.getElementById('days');
        const hoursEl = document.getElementById('hours');
        const minutesEl = document.getElementById('minutes');
        const secondsEl = document.getElementById('seconds');

        if (daysEl) daysEl.textContent = days.toString().padStart(2, '0');
        if (hoursEl) hoursEl.textContent = hours.toString().padStart(2, '0');
        if (minutesEl) minutesEl.textContent = minutes.toString().padStart(2, '0');
        if (secondsEl) secondsEl.textContent = seconds.toString().padStart(2, '0');

        const heroDaysEl = document.getElementById('hero-days');
        const heroHoursEl = document.getElementById('hero-hours');
        const heroMinsEl = document.getElementById('hero-mins');
        const heroSecsEl = document.getElementById('hero-secs');

        if (heroDaysEl) heroDaysEl.textContent = days.toString().padStart(2, '0');
        if (heroHoursEl) heroHoursEl.textContent = hours.toString().padStart(2, '0');
        if (heroMinsEl) heroMinsEl.textContent = minutes.toString().padStart(2, '0');
        if (heroSecsEl) heroSecsEl.textContent = seconds.toString().padStart(2, '0');
      }
    }

    updateCountdown();
    setInterval(updateCountdown, 1000);

    // App Screenshot Carousel
    const carousel = document.getElementById('app-carousel');
    const track = document.getElementById('carousel-track');
    const dots = document.querySelectorAll('.carousel-dot');

    if (carousel && track && dots.length > 0) {
      let currentSlideIndex = 0;
      const totalSlides = 3;
      let startX = 0;
      let isDragging = false;
      let currentTranslate = 0;
      let prevTranslate = 0;
      let autoPlayInterval: ReturnType<typeof setInterval>;

      function goToSlide(index: number) {
        currentSlideIndex = index;
        const slideWidth = 100 / totalSlides;
        currentTranslate = -index * slideWidth;
        track.style.transform = `translateX(${currentTranslate}%)`;

        dots.forEach((dot, i) => {
          if (i === index) {
            dot.classList.remove('bg-cream-warm/30');
            dot.classList.add('bg-cream-warm/80');
          } else {
            dot.classList.remove('bg-cream-warm/80');
            dot.classList.add('bg-cream-warm/30');
          }
        });
      }

      function nextSlide() {
        const next = (currentSlideIndex + 1) % totalSlides;
        goToSlide(next);
      }

      function prevSlide() {
        const prev = (currentSlideIndex - 1 + totalSlides) % totalSlides;
        goToSlide(prev);
      }

      function startAutoPlay() {
        autoPlayInterval = setInterval(nextSlide, 4000);
      }

      function stopAutoPlay() {
        clearInterval(autoPlayInterval);
      }

      // Touch events
      carousel.addEventListener('touchstart', (e: TouchEvent) => {
        stopAutoPlay();
        isDragging = true;
        startX = e.touches[0].clientX;
        track.style.transition = 'none';
      });

      carousel.addEventListener('touchmove', (e: TouchEvent) => {
        if (!isDragging) return;
        const currentX = e.touches[0].clientX;
        const diff = currentX - startX;
        const slideWidth = carousel.offsetWidth;
        const percentDiff = (diff / slideWidth) * (100 / totalSlides);
        track.style.transform = `translateX(${currentTranslate + percentDiff}%)`;
      });

