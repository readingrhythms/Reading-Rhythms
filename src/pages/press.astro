// Partners data for cross-reference
const partners = [
  { name: 'Penguin Random House', logo: 'https://images.pexels.com/photos/2041540/pexels-photo-2041540.jpeg?auto=compress&cs=tinysrgb&w=100&h=60', type: 'publisher' },
  { name: 'HarperCollins', logo: 'https://images.pexels.com/photos/159711/books-bookstore-book-reading-159711.jpeg?auto=compress&cs=tinysrgb&w=100&h=60', type: 'publisher' },
  { name: 'Simon & Schuster', logo: 'https://images.pexels.com/photos/207665/pexels-photo-207665.jpeg?auto=compress&cs=tinysrgb&w=100&h=60', type: 'publisher' },
  { name: 'Blackstone Publishing', logo: 'https://images.pexels.com/photos/1370295/pexels-photo-1370295.jpeg?auto=compress&cs=tinysrgb&w=100&h=60', type: 'publisher' },
  { name: 'Spotify', logo: 'https://images.pexels.com/photos/4348401/pexels-photo-4348401.jpeg?auto=compress&cs=tinysrgb&w=100&h=60', type: 'brand' },
  { name: 'Barnes & Noble', logo: 'https://images.pexels.com/photos/159711/books-bookstore-book-reading-159711.jpeg?auto=compress&cs=tinysrgb&w=100&h=60', type: 'brand' }
];
---

<BaseLayout title='Reading Rhythms | Press' description='Reading Rhythms in the media. Press coverage, brand assets, and media inquiries.' showNavbar={true} mainClasses='px-0'>
  <!-- Hero Section -->
  <section class="relative overflow-hidden pt-8 pb-16 bg-gradient-to-br from-white via-gray-50/30 to-jean/5">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl lg:text-6xl text-dark-gray font-display tracking-wider leading-tight mb-6">
          Reading Rhythms in the <span class="bg-gradient-to-r from-jean via-rust to-dark-purple bg-clip-text text-transparent">Media</span>
        </h1>
        <p class="text-lg md:text-xl text-dark-gray/70 max-w-3xl mx-auto">
          Discover how major media outlets are covering the reading party revolution that's transforming how people connect over books.
        </p>
      </div>

      <!-- Quick Stats -->
      <div class="flex flex-col sm:flex-row gap-4 sm:gap-8 justify-center text-center mb-12">
        <div class="group cursor-pointer">
          <div class="text-3xl md:text-4xl font-bold text-jean group-hover:scale-110 transition-transform duration-300">50+</div>
          <div class="text-sm md:text-base text-dark-gray/60 group-hover:text-dark-gray transition-colors duration-300">Media Mentions</div>
        </div>
        <div class="w-px h-10 bg-gradient-to-b from-transparent via-gray-300 to-transparent hidden sm:block"></div>
        <div class="group cursor-pointer">
          <div class="text-3xl md:text-4xl font-bold text-rust group-hover:scale-110 transition-transform duration-300">10M+</div>
          <div class="text-sm md:text-base text-dark-gray/60 group-hover:text-dark-gray transition-colors duration-300">Media Impressions</div>
        </div>
        <div class="w-px h-10 bg-gradient-to-b from-transparent via-gray-300 to-transparent hidden sm:block"></div>
        <div class="group cursor-pointer">
          <div class="text-3xl md:text-4xl font-bold text-dark-purple group-hover:scale-110 transition-transform duration-300">15+</div>
          <div class="text-sm md:text-base text-dark-gray/60 group-hover:text-dark-gray transition-colors duration-300">Major Outlets</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Press Logos -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-display text-dark-gray mb-4">
          Featured <span class="bg-gradient-to-r from-jean to-rust bg-clip-text text-transparent">In</span>
        </h2>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-6 items-center mb-16">
        {pressLogos.map((press) => (
          <div class="group flex items-center justify-center p-4 bg-gray-50 rounded-xl hover:bg-white hover:shadow-lg transition-all duration-300 min-h-[60px]">
            <img src={press.logo.src || press.logo} alt={`${press.name} logo`} class="max-w-[85%] max-h-[75%] w-full h-full object-contain transition-all duration-300" />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Articles -->
  <section class="py-16 lg:py-24 bg-gradient-to-b from-gray-50/30 to-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display text-dark-gray mb-4">
          Featured <span class="bg-gradient-to-r from-jean to-rust bg-clip-text text-transparent">Coverage</span>
        </h2>
        <p class="text-lg text-dark-gray/70">
          Read what major publications are saying about Reading Rhythms.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8 mb-12">
        {pressLinks.map((press) => (
          <a href={press.href} target="_blank" rel="noopener" class="group bg-white border border-gray-200 rounded-2xl p-6 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
            <img src={press.logo.src || press.logo} alt={`${press.source} logo`} class="w-20 mb-4 filter grayscale group-hover:grayscale-0 transition-all duration-300" />
            <h3 class="text-xl font-semibold text-dark-gray mb-2 group-hover:text-jean transition-colors duration-300">{press.title}</h3>
            <p class="text-dark-gray/75 mb-2">{press.source}</p>
            <p class="text-dark-gray/50 text-sm">{press.date}</p>
            <div class="mt-4 flex items-center text-jean text-sm font-semibold opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <span>Read Article</span>
              <img src={arrowright.src} alt="Arrow right" class="w-3 ml-2 group-hover:translate-x-1 transition-transform duration-300" />
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Press Inquiry Form -->
  <section class="py-16 lg:py-24 bg-gradient-to-b from-white to-gray-50/30">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display text-dark-gray mb-4">
          Media <span class="bg-gradient-to-r from-jean to-rust bg-clip-text text-transparent">Inquiries</span>
        </h2>
        <p class="text-lg text-dark-gray/70">
          Interested in covering Reading Rhythms? We'd love to hear from you.
        </p>
      </div>
      
      <div class="bg-white rounded-3xl shadow-xl border border-gray-100 p-8 lg:p-12">
        <form class="space-y-6" action="#" method="POST">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="outlet" class="block text-sm font-semibold text-dark-gray mb-2">Media Outlet *</label>
              <input type="text" id="outlet" name="outlet" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-jean focus:border-transparent">
            </div>
            <div>
              <label for="journalist-name" class="block text-sm font-semibold text-dark-gray mb-2">Your Name *</label>
              <input type="text" id="journalist-name" name="journalist-name" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-jean focus:border-transparent">
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="email" class="block text-sm font-semibold text-dark-gray mb-2">Email Address *</label>
              <input type="email" id="email" name="email" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-jean focus:border-transparent">
            </div>
            <div>
              <label for="phone" class="block text-sm font-semibold text-dark-gray mb-2">Phone Number</label>
              <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-jean focus:border-transparent">
            </div>
          </div>
          
          <div>
            <label for="story-type" class="block text-sm font-semibold text-dark-gray mb-2">Story Type *</label>
            <select id="story-type" name="story-type" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-jean focus:border-transparent">
              <option value="">Select story type</option>
              <option value="feature">Feature Story</option>
              <option value="news">News Coverage</option>
              <option value="interview">Interview Request</option>
              <option value="event-coverage">Event Coverage</option>
              <option value="trend-piece">Trend Piece</option>
              <option value="podcast">Podcast Appearance</option>
              <option value="tv-segment">TV Segment</option>
              <option value="other">Other</option>
            </select>
          </div>
          
          <div>
            <label for="deadline" class="block text-sm font-semibold text-dark-gray mb-2">Deadline</label>
            <select id="deadline" name="deadline" class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-jean focus:border-transparent">
              <option value="">Select deadline</option>
              <option value="urgent">Urgent (within 24 hours)</option>
              <option value="this-week">This week</option>
              <option value="next-week">Next week</option>
              <option value="this-month">This month</option>
              <option value="flexible">Flexible</option>
            </select>
          </div>
          
          <div>
            <label for="angle" class="block text-sm font-semibold text-dark-gray mb-2">Story Angle/Focus *</label>
            <textarea id="angle" name="angle" rows="4" required placeholder="What's your story angle? What aspects of Reading Rhythms are you most interested in covering?" class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-jean focus:border-transparent resize-none"></textarea>
          </div>
          
          <div>
            <label for="questions" class="block text-sm font-semibold text-dark-gray mb-2">Specific Questions or Requests</label>
            <textarea id="questions" name="questions" rows="3" placeholder="Any specific questions, interview requests, or additional information needed?" class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-jean focus:border-transparent resize-none"></textarea>
          </div>
          
          <div class="text-center">
            <button type="submit" class="group inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-jean to-dark-purple text-white rounded-xl font-bold text-lg hover:shadow-xl hover:shadow-jean/25 transition-all duration-300 hover:-translate-y-1">
              <span>Submit Media Inquiry</span>
              <img src={arrowright.src} alt="Arrow right" class="w-5 ml-3 group-hover:translate-x-1 transition-transform duration-300" />
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Press Resources -->
  <section class="py-16 lg:py-24 bg-gradient-to-b from-gray-50/30 to-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display text-dark-gray mb-4">
          Press <span class="bg-gradient-to-r from-jean to-rust bg-clip-text text-transparent">Resources</span>
        </h2>
        <p class="text-lg text-dark-gray/70">
          Everything you need to cover Reading Rhythms accurately and effectively.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white border border-gray-200 rounded-2xl p-6 text-center hover:shadow-lg transition-all duration-300">
          <div class="w-12 h-12 bg-jean rounded-xl flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">📁</span>
          </div>
          <h3 class="text-lg font-semibold text-dark-gray mb-2">Press Kit</h3>
          <p class="text-dark-gray/70 text-sm mb-4">High-res logos, photos, and brand guidelines</p>
          <a href="#" class="inline-flex items-center text-jean font-semibold text-sm hover:text-dark-purple transition-colors duration-300">
            <span>Download Kit</span>
            <img src={arrowright.src} alt="Arrow right" class="w-3 ml-2" />
          </a>
        </div>
        
        <div class="bg-white border border-gray-200 rounded-2xl p-6 text-center hover:shadow-lg transition-all duration-300">
          <div class="w-12 h-12 bg-rust rounded-xl flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">📊</span>
          </div>
          <h3 class="text-lg font-semibold text-dark-gray mb-2">Fact Sheet</h3>
          <p class="text-dark-gray/70 text-sm mb-4">Key statistics, timeline, and company info</p>
          <a href="#" class="inline-flex items-center text-jean font-semibold text-sm hover:text-dark-purple transition-colors duration-300">
            <span>View Facts</span>
            <img src={arrowright.src} alt="Arrow right" class="w-3 ml-2" />
          </a>
        </div>
        
        <div class="bg-white border border-gray-200 rounded-2xl p-6 text-center hover:shadow-lg transition-all duration-300">
          <div class="w-12 h-12 bg-dark-purple rounded-xl flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">🎤</span>
          </div>
          <h3 class="text-lg font-semibold text-dark-gray mb-2">Interview Availability</h3>
          <p class="text-dark-gray/70 text-sm mb-4">Schedule interviews with our founders</p>
          <a href="mailto:press@readingrhythms.co" class="inline-flex items-center text-jean font-semibold text-sm hover:text-dark-purple transition-colors duration-300">
            <span>Book Interview</span>
            <img src={arrowright.src} alt="Arrow right" class="w-3 ml-2" />
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Partners Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display text-dark-gray mb-4">
          Our <span class="bg-gradient-to-r from-jean to-rust bg-clip-text text-transparent">Partners</span>
        </h2>
        <p class="text-lg text-dark-gray/70">
          Working with leading publishers and innovative brands.
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6 items-center">
        {partners.map((partner) => (
          <div class="group flex items-center justify-center p-4 bg-gray-50 rounded-xl hover:bg-white hover:shadow-lg transition-all duration-300 min-h-[80px]">
            <img src={partner.logo} alt={`${partner.name} logo`} class="max-w-[85%] max-h-[75%] w-full h-full object-contain transition-all duration-300" />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-16 lg:py-24 bg-dark-gray">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-display text-white mb-6">
        Ready to Cover Our Story?
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        We're always excited to share the Reading Rhythms story with journalists and media outlets.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="mailto:press@readingrhythms.co" class="group inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-4 bg-white text-dark-gray rounded-xl font-bold text-base md:text-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
          <span>Email Press Team</span>
        </a>
        <a href="#" onclick="document.querySelector('form').scrollIntoView({behavior: 'smooth'})" class="group inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-4 border-2 border-white text-white rounded-xl font-semibold text-base md:text-lg hover:bg-white hover:text-dark-gray transition-all duration-300 hover:-translate-y-1">
          <span>Submit Inquiry Above</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Form styling enhancements */
  input:focus, select:focus, textarea:focus {
    box-shadow: 0 0 0 3px rgba(45, 73, 113, 0.1);
  }
  
  /* Hover effects for press logos */
  .group:hover img {
    transform: scale(1.05);
  }
  
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
</style>