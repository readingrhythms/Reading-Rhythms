const pressLinks = [
  {
    title: "It's My Party and I'll Read If I Want To",
    source: "The New York Times",
    logo: "https://res.cloudinary.com/daaznyhsu/image/upload/v1757710722/press-nyt_xksstb.svg",
    href: "https://www.nytimes.com/2023/12/19/books/reading-rhythms.html",
    date: "December 19, 2023"
  },
  {
    title: "The Reading Party Revolution",
    source: "Rolling Stone",
    logo: "https://res.cloudinary.com/daaznyhsu/image/upload/v1757710906/rolling-stone_z3abfc.svg",
    href: "#",
    date: "November 15, 2023"
  },
  {
    title: "Silent Reading, Loud Impact",
    source: "The Guardian",
    logo: "https://res.cloudinary.com/daaznyhsu/image/upload/v1757713429/guardian_thxn20.jpg",
    href: "#",
    date: "October 8, 2023"
  },
  {
