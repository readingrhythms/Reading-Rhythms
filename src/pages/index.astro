		<!-- Content Container -->
		<div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
			<div class="grid lg:grid-cols-12 gap-8 lg:gap-12 items-start">
				
				<!-- Left Column - Hero Content (6 columns on desktop) -->
				<div class="lg:col-span-6 text-center lg:text-left space-y-6">
					<!-- Logo -->
				 	<div class="flex justify-center lg:justify-start hidden lg:flex">
						<img src={logo.src} alt="Reading Rhythms logo" class="w-20 md:w-24 lg:w-28 h-20 md:h-24 lg:h-28 drop-shadow-lg transform hover:rotate-3 transition-transform duration-300" />
					</div> 
					
					<!-- Main Heading -->
