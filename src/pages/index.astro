<script>
	// Simple image rotation functionality
	let currentImageIndex = 0;
	const images = document.querySelectorAll('.rotating-image');
	
	function rotateImages() {
		// Hide all images
		images.forEach(img => {
			img.classList.remove('active');
			img.style.opacity = '0';
		});
		
		// Show current image
		setTimeout(() => {
			images[currentImageIndex].classList.add('active');
			images[currentImageIndex].style.opacity = '1';
			
			// Move to next image
			currentImageIndex = (currentImageIndex + 1) % images.length;
		}, 300);
	}
	
	// Start rotation when page loads
	document.addEventListener('DOMContentLoaded', () => {
		setInterval(rotateImages, 4000); // Change every 4 seconds
		
		// Load chapters data from hidden element
		const chaptersDataElement = document.getElementById('chapters-data');
		if (!chaptersDataElement || !chaptersDataElement.dataset.chapters) {
			console.log('No chapters data found');
			return;
		}
		
		const allChapters = JSON.parse(chaptersDataElement.dataset.chapters);
		
		// Get arrow right source
		const arrowRightData = document.getElementById('arrow-right-data');
		const arrowRightSrc = arrowRightData ? arrowRightData.dataset.arrow : '';
		
		// Chapter navigation for desktop only
		let currentPage = 0;
		const chaptersPerPage = 6;
		
		const prevButton = document.getElementById('prev-chapters');
		const nextButton = document.getElementById('next-chapters');
		const counter = document.getElementById('chapter-counter');
		const desktopGrid = document.getElementById('desktop-chapters-grid');
		
		function updateChaptersDisplay() {
			const totalPages = Math.ceil(allChapters.length / chaptersPerPage);
			const startIndex = currentPage * chaptersPerPage;
			const endIndex = Math.min(startIndex + chaptersPerPage, allChapters.length);
			const currentChapters = allChapters.slice(startIndex, endIndex);
			
			// Add fade out animation (direction will be set by button click)
			if (desktopGrid) {
				desktopGrid.style.opacity = '0';
				// Transform is set by the button click handler
			}
			
			// Update content after a short delay for smooth transition
			setTimeout(() => {
			// Update desktop grid
			if (desktopGrid) {
				desktopGrid.innerHTML = `
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
						${currentChapters.map(chapter => `
							<div class="group relative overflow-hidden bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
								<div class="aspect-video overflow-hidden">
									<img src="${chapter.image.src || chapter.image}" alt="${chapter.name}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
								</div>
								<div class="p-6">
									<h3 class="text-2xl font-serif text-dark-gray mb-2">${chapter.name}</h3>
									<p class="text-dark-gray/60 text-sm mb-4">${chapter.location}</p>
									<a href="/events?chapterId=${chapter.name.toLowerCase().replace(/\s+/g, '-')}" class="inline-flex items-center text-jean text-sm font-semibold hover:text-dark-purple transition-colors duration-300">
										<span>View Events</span>
										<img src="${arrowRightSrc}" alt="Arrow right" class="w-3 ml-2 group-hover:translate-x-1 transition-transform duration-300" />
									</a>
								</div>
							</div>
						`).join('')}
					</div>
				`;
					
					// Fade in animation
					setTimeout(() => {
						desktopGrid.style.opacity = '1';
						desktopGrid.style.transform = 'translateX(0)';
					}, 50);
			}
			}, 200);
			
			// Update counter
			if (counter) {
				counter.textContent = `${startIndex + 1}-${endIndex} of ${allChapters.length}`;
			}
			
			// Update button states
			if (prevButton && nextButton) {
				prevButton.disabled = currentPage === 0;
				nextButton.disabled = currentPage >= totalPages - 1;
			}
		}
		
		// Event listeners
		if (prevButton && nextButton) {
			prevButton.addEventListener('click', () => {
				const totalPages = Math.ceil(allChapters.length / chaptersPerPage);
				if (currentPage > 0) {
					// Set slide direction for previous (slide left)
					if (desktopGrid) {
						desktopGrid.style.transform = 'translateX(-20px)';
					}
					currentPage--;
					updateChaptersDisplay();
				}
			});
			
			nextButton.addEventListener('click', () => {
				const totalPages = Math.ceil(allChapters.length / chaptersPerPage);
				if (currentPage < totalPages - 1) {
					// Set slide direction for next (slide right)
					if (desktopGrid) {
						desktopGrid.style.transform = 'translateX(20px)';
					}
					currentPage++;
					updateChaptersDisplay();
				}
			});
		}
		
		// Initialize
		updateChaptersDisplay();
		
		// Testimonials show more/less functionality
		function setupTestimonialsToggle(toggleId, textId, arrowId, isMainGrid = true) {
			const toggleButton = document.getElementById(toggleId);
			const toggleText = document.getElementById(textId);
			const toggleArrow = document.getElementById(arrowId);
			
			if (!toggleButton || !toggleText || !toggleArrow) return;
			
			let isExpanded = false;
			
			toggleButton.addEventListener('click', () => {
				const hiddenTestimonials = document.querySelectorAll('.testimonial-hidden');
				
				if (isExpanded) {
					// Collapse
					hiddenTestimonials.forEach(testimonial => {
						testimonial.style.display = 'none';
					});
					toggleText.textContent = 'Show More Testimonials';
					toggleArrow.style.transform = 'rotate(0deg)';
					isExpanded = false;
					
					// Smooth scroll to testimonials section
					document.querySelector('#testimonials-grid, .masonry-fallback').scrollIntoView({
						behavior: 'smooth',
						block: 'start'
					});
				} else {
					// Expand
					hiddenTestimonials.forEach(testimonial => {
						testimonial.style.display = 'block';
					});
					toggleText.textContent = 'Show Less';
					toggleArrow.style.transform = 'rotate(180deg)';
					isExpanded = true;
				}
			});
		}
		
		// Setup both toggle buttons (main and fallback)
		setupTestimonialsToggle('testimonials-toggle', 'toggle-text', 'toggle-arrow');
		setupTestimonialsToggle('testimonials-toggle-fallback', 'toggle-text-fallback', 'toggle-arrow-fallback', false);
		
		// Press carousel animation
		const pressCarousel = document.querySelector('.press-carousel');
		if (pressCarousel) {
			let scrollAmount = 0;
			const scrollSpeed = 0.2; // Slower speed for smoother animation
			
			function animateCarousel() {
				scrollAmount += scrollSpeed;
				pressCarousel.style.transform = `translateX(-${scrollAmount}px)`;
				
				// Reset when we've scrolled through half the content (since we have duplicates)
				const totalWidth = pressCarousel.scrollWidth / 4; // Divide by 4 since we have 4 sets
				if (scrollAmount >= totalWidth) {
					scrollAmount = 0;
				}
				
				requestAnimationFrame(animateCarousel);
			}
			
			// Start animation
			animateCarousel();
			
			// Pause on hover
			let isPaused = false;
			pressCarousel.addEventListener('mouseenter', () => {
				isPaused = true;
			});
			
			pressCarousel.addEventListener('mouseleave', () => {
				isPaused = false;
			});
			
			// Modified animation function to respect pause
			function animateCarouselWithPause() {
				if (!isPaused) {
					scrollAmount += scrollSpeed;
					pressCarousel.style.transform = `translateX(-${scrollAmount}px)`;
					
					const totalWidth = pressCarousel.scrollWidth / 4;
					if (scrollAmount >= totalWidth) {
						scrollAmount = 0;
					}
				}
				
				requestAnimationFrame(animateCarouselWithPause);
			}
			
			// Start the pauseable animation
			animateCarouselWithPause();
		}
		
		const seeMoreButton = document.getElementById('see-more-press');
		const fadeOverlay = document.getElementById('press-fade');
		const buttonContainer = document.getElementById('press-button-container');
		const hiddenCards = document.querySelectorAll('.hidden-press');
		
		if (seeMoreButton && hiddenCards.length > 0) {
			seeMoreButton.addEventListener('click', () => {
				// Show all hidden cards
				hiddenCards.forEach(card => {
					card.classList.remove('hidden-press');
					card.style.display = 'block';
				});
				
				// Hide the fade overlay and button
				if (fadeOverlay) fadeOverlay.style.display = 'none';
				if (buttonContainer) buttonContainer.style.display = 'none';
			});
		} else if (hiddenCards.length === 0) {
			// If no hidden cards, hide the button and fade
			if (fadeOverlay) fadeOverlay.style.display = 'none';
			if (buttonContainer) buttonContainer.style.display = 'none';
		}
	});

</script>

